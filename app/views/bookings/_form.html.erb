<div class="text-center">
  <h3>Realizar reseva</h3>

  <%= form_with(model: booking) do |form| %>
    <% if booking.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

        <ul>
          <% booking.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field mt-2">
      <%= form.text_field :name, placeholder: "Nome do morador.", class: 'form-control', required: true %>
    </div>

    <div class="field mt-2">
      <%= form.label "Data e Horário" %> <br />
      
      <div class="booking_div">
        <%= form.datetime_field :interval, class: 'form-control', required: true %>
      </div>

      <small>(Toda reserva será validada como uma reserva de <b>1 hora</b>)</small>
    </div>

    <div class="actions">
      <%= form.submit 'Reservar', class: 'btn btn-primary mt-4' %>
    </div>
  <% end %>
</div>